{
  "pandoc": {
    "prefix": "pandoc",
    "body": [
      "NAME = ${1:filename}",
      "",
      "TEMPLATE = ${2:default.latex}",
      "FLAGS = ",
      "ENGINE = 'xelatex'",
      "",
      "all: pdf",
      "",
      "pdf:",
      "$3pandoc \\$(FLAGS) --pdf-engine=\\$(ENGINE) --template=\\$(PANDOC_TEMPLATES)\\$(TEMPLATE) \\$(NAME).md -o \\$(NAME).pdf",
      "",
      "view:",
      "$4zathura \\$(NAME).pdf &"
    ],
    "description": "pandoc"
  }
}
